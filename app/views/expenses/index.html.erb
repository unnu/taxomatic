<p>Jahr: <%= expenses_year_selector.html_safe %></p>

<p><%= link_to 'Neue Ausgabe', :action => 'new' %></p>

<table id="itemslist">

<% group_by_month(@expenses).each do |month, expenses| %>

  <tr>
    <td class="nodots" colspan="9">
      <h3><%= I18n.l(expenses.first.billed_on, :format => :month_name) %></h3>
    </td>
  </tr>
  <tr>
    <th>Datum</th>
    <th>Kategorie</th>
    <th>Netto</th>
    <th>Brutto</th>
    <th>Beschreibung</th>
    <th colspan="3">&nbsp;</th>
  </tr>

  
  <% expenses.each do |expense| %>
    <%= render expense %>
  <% end %>
  
<% end %>
</table>

<p>zeige <%= @expenses.length %> Ausgaben.</p>
