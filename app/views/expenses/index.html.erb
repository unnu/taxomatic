<% group_by_month(@expenses).each do |month, expenses| %>

  <tr>
    <td colspan="9" style="padding-top:10px">
      <b><%= I18n.l(expenses.first.billed_on, :format => :month_name) %></b>
    </td>
  </tr>
  
  <% expenses.each do |expense| %>
    <%= render expense %>
  <% end %>
  
<% end %>
</table>

