
<h1>Einkommensteuer für <%= @year %></h1>

<p id="year_select">
  Jahr wählen: <%= year_selector(@year).html_safe %>
</p>

<%= render :partial => 'invoices' %>
<%= render :partial => 'expenses' %>

<h2>Zusammenfassung</h2>

<table>
  <tr>
    <td>Einnahmen</td>
    <td><%= format_euro(@total_invoices) %></td>
  </tr>
  <tr>
    <td>Ausgaben</td>
    <td class="money"><%= format_euro(@total_expenses) %></td>
  </tr>
  <tr>
</table>
